extends ../shared/layout

block main-content
    h3 User Profile
    .row
        .col-md-offset-3.col-md-6
            form.form-horizontal(role="form" method="post")
              .form-group
                label.col-sm-2.control-label(for="firstName") First Name
                .col-sm-10
                  input.form-control(type="text" name="firstName" placeholder="#{user.firstName || 'First name'}")
              .form-group
                label.col-sm-2.control-label(for="lastName") Last Name
                .col-sm-10
                   input.form-control(type="text" name="lastName" placeholder="#{user.lastName || 'Last name'}")
              .form-group
                label.col-sm-2.control-label(for="email") Email
                .col-sm-10
                   input.form-control(type="text" name="email" placeholder="#{user.email || 'Email'}")
              .form-group
                label.col-sm-2.control-label(for="imageUrl") Image
                .col-sm-10
                  input.form-control(type="text" name="imageUrl" placeholder="#{user.imageUrl || 'Profile image url'}")
                .col-sm-10
              .form-group
                label.col-sm-2.control-label(for="facebookUrl") Facebook
                .col-sm-10
                  input.form-control(type="text" name="facebookUrl" placeholder="#{user.facebookUrl || 'Facebook url'}")
              .form-group
                 label.col-sm-2.control-label(for="youtubeUrl") Youtube
                 .col-sm-10
                   input.form-control(type="text" name="youtubeUrl" placeholder="#{user.youtubeUrl || 'Youtube url'}")
              br
              img(src="#{user.imageUrl}")
              br
              .form-group
                .col-sm-offset-2.col-sm-10
                    input(type="submit" value="Update Profile" class="btn btn-primary")

    .row
        .text-center
            h2 Own Playlists
        .col-md-offset-2.col-md-8
            table.table.table-striped.table-bordered
                tr
                    th Title
                    th Date
                each event in ownEvents
                    tr
                        td
                            a(href="/events/#{event._id}") #{event.title}
                        td #{moment(event.date).format("MMM-DD-YYYY HH:mm:ss")}
                        
    .row
        .text-center
            h2 Rated Playlists
        .col-md-offset-2.col-md-8
            table.table.table-striped.table-bordered
                ul
                each event in JSON.parse(addedRights)
                    li
                        a(href="/events/#{event}") #{event}
