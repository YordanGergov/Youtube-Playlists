extends ../shared/layout
block main-content
    .row
        .text-center
            h2 Youtube Playlists
        .col-md-12
            table.table.table-striped.table-bordered
                tr
                    th Title
                    th Category
                    th Date
                    th Type
                    th Created By
                    th Rating
                each playlist in playlists
                    tr
                        td
                            a(href="/playlists/#{playlist._id}") #{playlist.title}
                        td #{playlist.category}
                        td #{moment(playlist.date).format("MMM-DD-YYYY HH:mm:ss")}
                        td #{ playlist.type}
                        td #{playlist.owner.firstName + ' ' + playlist.owner.lastName}
                        script. var rating = Math.floor((Math.random() * 5) + 1);
                        td #{playlist.rating}


block page-scripts
    script(src="js/sendRequest.js")

